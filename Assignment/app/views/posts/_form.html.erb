<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="errormessage2">
      <%= pluralize(@post.errors.count, "error") %>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :contents %><br/>
    <%= f.text_area :contents, :style => "width:800px"%>
  </div>
  <div class="actions">
    <p><%= f.submit "Add Post", :class => 'btn btn-success'%></p>
  </div>
<% end %>
